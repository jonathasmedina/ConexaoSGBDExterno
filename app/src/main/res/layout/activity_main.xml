<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="abreNovo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/buttonNovo"
        android:text="Novo" style="?android:attr/buttonStyleSmall"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="abreLista"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonLista"
        android:text="Lista" style="?android:attr/buttonStyleSmall"
        android:layout_below="@+id/buttonNovo"/>

</RelativeLayout>